{
  "name": "slackers",
  "version": "1.0.0",
  "description": "CS 320 Semester project based on the MERN Stack",
  "main": "index.js",
  "scripts": {
    "start": "cd backend && npm install && npm start",
    "server": "cd backend && nodemon server.js backend",
    "client": "cd  frontend && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install frontend && npm run build --prefix ./frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Conor-Carmichael/Slackers.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Conor-Carmichael/Slackers/issues"
  },
  "homepage": "https://github.com/Conor-Carmichael/Slackers#readme",
  "dependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.11"
  }
}
